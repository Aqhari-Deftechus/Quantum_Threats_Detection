# Long-distance profile: BALANCED GPU
# Goal: better far-face recall with moderate GPU load.

QTD_LONG_DISTANCE_MODE=true
QTD_LONG_DISTANCE_DET_SIZE=960x960

# Keep resize enabled but preserve more pixels than default.
QTD_INFERENCE_RESIZE_MODE=auto
QTD_INFERENCE_SHORT_SIDE=1080

# Detect more often than default (default is 5).
QTD_DETECT_EVERY_N_FRAMES=2

# Allow smaller faces than default (6400).
QTD_MIN_FACE_AREA=3600
QTD_MIN_FACE_AREA_WARN_THRESHOLD=2500

# Match more faces per cycle without saturating compute.
QTD_LONG_DISTANCE_MAX_FACE_MATCHES_PER_CYCLE=12
QTD_MAX_MATCHES_HARD_CAP=32

# RTSP stability/latency tuning.
QTD_RTSP_PREFER_FFMPEG=true
QTD_RTSP_BUFFER_SIZE=1
QTD_RTSP_READ_LATEST_FRAME=true

# Capture side cadence.
QTD_CAPTURE_FPS=15
