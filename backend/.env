# 4K Long-distance profile: BEST OF THE BEST (Max Recall / High Load)
# Goal: highest distant-face recall on strong GPU. Expect high usage.

QTD_LONG_DISTANCE_MODE=true

# Very high detector input for tiny faces.
# 1536 is strong. 1792 is the next step if still stable.
QTD_LONG_DISTANCE_DET_SIZE=1792x1792

# Keep all source pixels.
QTD_INFERENCE_RESIZE_MODE=off

# Detect every frame we capture.
QTD_DETECT_EVERY_N_FRAMES=1

# Very small-face acceptance.
# 1600 = ~40x40 px faces.
QTD_MIN_FACE_AREA=1600
QTD_MIN_FACE_AREA_WARN_THRESHOLD=1600

# Recognize many faces each cycle.
QTD_LONG_DISTANCE_MAX_FACE_MATCHES_PER_CYCLE=60
QTD_MAX_MATCHES_HARD_CAP=128

# RTSP stability (low-latency).
QTD_RTSP_PREFER_FFMPEG=true
QTD_RTSP_BUFFER_SIZE=1
QTD_RTSP_READ_LATEST_FRAME=true

# 4K capture cadence.
# 30 is possible, but decode can be heavy. This is max.
QTD_CAPTURE_FPS=30
